<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/droptablelayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/insert_layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Drop Table"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/select_tv_name"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Name" />

        <EditText
            android:id="@+id/select_et_name"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="4"
            android:ems="10"
            android:hint="Table name"
            android:inputType="text"
            android:maxLength="30" />

    </LinearLayout>

    <TextView
        android:id="@+id/select_tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/select_btn_run"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RUN" />


</LinearLayout>