<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/insertNewCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="6dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/insertrow_et_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:minHeight="48dp"
            app:layout_constraintBottom_toBottomOf="@+id/insertrow_tv_value_title"
            app:layout_constraintEnd_toStartOf="@+id/insertrow_checkbox"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/insertrow_tv_value_title"
            app:layout_constraintTop_toTopOf="@+id/insertrow_tv_value_title"
            app:layout_constraintVertical_bias="0.551" />

        <TextView
            android:id="@+id/insertrow_tv_colname_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Column name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/insertrow_tv_value_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Value"
            app:layout_constraintEnd_toEndOf="@+id/insertrow_tv_colname_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/insertrow_tv_colname_title" />

        <CheckBox
            android:id="@+id/insertrow_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:enabled="true"
            app:layout_constraintBottom_toBottomOf="@+id/insertrow_et_value"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/insertrow_tv_columnname" />

        <TextView
            android:id="@+id/insertrow_tv_columnname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/insertrow_tv_colname_title"
            app:layout_constraintEnd_toEndOf="@+id/insertrow_et_value"
            app:layout_constraintStart_toStartOf="@+id/insertrow_et_value"
            app:layout_constraintTop_toTopOf="@+id/insertrow_tv_colname_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>